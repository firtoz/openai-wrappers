{
  "compilerOptions": {
    "lib": [
      "esnext",
      "dom"
    ],
    "module": "commonjs",
    "target": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "lib",
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "paths": {
      "your-package-name": [
        "./src/index.ts"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ]
}
